        xmlns:BO="clr-namespace:BO;assembly=BL" x:Class="UI.LineWindow"
        mc:Ignorable="d"
        Title="LineWindow" Height="504" Width="865"  >


    <Grid Opacity="0.85" >
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FF582F74" Offset="0.061"/>
                <GradientStop Color="#FFE5A7A7" Offset="0.747"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ListView Name="ListViewLine" HorizontalAlignment="Left" Height="370" Margin="96,10,0,0" VerticalAlignment="Top" Width="682" FontWeight="Bold" FontFamily="Lucida Sans" FontSize="16" MouseDoubleClick="ListViewLine_MouseDoubleClick">
            <ListView.Background>
                <ImageBrush ImageSource="backgroundbus.jpg" Opacity="0.6"/>
            </ListView.Background>

            <ListView.ItemBindingGroup>
                <BindingGroup/>
            </ListView.ItemBindingGroup>
            <ListView.View>
                <GridView >

                    <GridViewColumn x:Name="lineNumber" Header="Line Number:" DisplayMemberBinding="{Binding Code}" Width="140"  />
                    <GridViewColumn x:Name="area" Header="Area:" DisplayMemberBinding="{Binding Area}"  Width="150"/>
                    <GridViewColumn x:Name="firstStation" Header="First Station:" DisplayMemberBinding="{Binding FirstStation}"  Width="150"/>
                    <GridViewColumn x:Name="lastStation" Header="Last Station:" DisplayMemberBinding="{Binding LastStation}"  Width="150"/>




                </GridView>
            </ListView.View>
        </ListView>









