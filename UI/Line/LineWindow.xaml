        <Button Content="Add Line" HorizontalAlignment="Left" Margin="171,409,0,0" VerticalAlignment="Top" Width="139" Height="41" Click="Button_Click_2" FontFamily="Lucida Sans" FontSize="20">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>

                </Style>
            </Button.Resources>
        </Button>


        <Button Content="Update Line" HorizontalAlignment="Left" Margin="365,409,0,0" VerticalAlignment="Top" Width="139" Height="41" Click="Button_Click" FontFamily="Lucida Sans" FontSize="20">
